<resources>

    <!-- App components -->
    <style name="Header.Title" parent="TextAppearance.App.Headline5" />

    <style name="Header.Section" parent="TextAppearance.App.Headline6" />

    <style name="Label.Regular" parent="TextAppearance.App.Body2" />

    <style name="Label.Bold" parent="TextAppearance.App.Body2">
        <item name="fontFamily">@font/bold</item>
    </style>

    <!-- General text appearances -->
    <style name="TextAppearance.App.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_headline_text_color</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_subtitle_text_color</item>
    </style>

    <style name="TextAppearance.App.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/bold</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_subtitle_text_color</item>
    </style>

    <style name="TextAppearance.App.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_body_text_color</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_body_text_color</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_caption_text_color</item>
    </style>

    <style name="TextAppearance.App.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_overline_text_color</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/regular</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textColor">@color/primary_button_text_color</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.App.Button.Branded" parent="Widget.App.Button">
        <item name="backgroundTint">@color/brandPrimary</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.TextButton</item>
        <item name="android:textAppearance">@style/TextAppearance.App.Button</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/corners_radius</item>
    </style>

    <style name="ThemeOverlay.App.Button.TextButton" parent="">
        <item name="colorPrimary">@color/brandPrimary</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorPrimary">@color/brandTertiary</item>
        <item name="colorOnPrimary">@color/foregroundTertiary</item>
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorSurface">@android:color/transparent</item>
    </style>

</resources>
